# Production Environment Variables for Simple Payment Gate

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
ENVIRONMENT=production

# Frontend URL (update with your domain when configured)
FRONTEND_BASE_URL=http://192.168.100.159
# FRONTEND_BASE_URL=https://simplepaymentgate  # Uncomment when domain is configured

# Webhook Base URL (important for Fiserv callbacks)
WEBHOOK_BASE_URL=http://192.168.100.159
# WEBHOOK_BASE_URL=https://simplepaymentgate  # Uncomment when domain is configured

# Fiserv Payment Gateway Configuration
FISERV_STORE_ID=760995999
FISERV_API_KEY=your_production_api_key_here
FISERV_API_SECRET=j}2W3P)Lwv
FISERV_BASE_URL=https://test.ipg-online.com
FISERV_GATEWAY_URL=https://test.ipg-online.com/connect/gateway/processing
FISERV_TIMEZONE=Europe/Warsaw
FISERV_CURRENCY=985
FISERV_HASH_ALGORITHM=HMACSHA256

# Payment Configuration
PAYMENT_SUCCESS_URL=http://192.168.100.159/payment/success
PAYMENT_FAILURE_URL=http://192.168.100.159/payment/failure
# PAYMENT_SUCCESS_URL=https://simplepaymentgate/payment/success  # Uncomment when domain is configured
# PAYMENT_FAILURE_URL=https://simplepaymentgate/payment/failure  # Uncomment when domain is configured

# CORS Configuration
CORS_ORIGINS=["http://192.168.100.159", "http://simplepaymentgate", "https://simplepaymentgate"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/simplepaymentgate/backend.log

# Security (generate a strong secret for production)
SECRET_KEY=your-very-secure-secret-key-change-this-in-production

# JWT Configuration (for advanced project)
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# File Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "gif", "svg"]
UPLOAD_PATH=/var/www/simplepaymentgate/backend/static/uploads

# Database/Storage Paths
DATA_PATH=/var/www/simplepaymentgate/backend/app/data
ORGANIZATION_DATA_FILE=/var/www/simplepaymentgate/backend/app/data/organization.json
PAYMENTS_DATA_FILE=/var/www/simplepaymentgate/backend/app/data/payments.json

# Performance Settings
WORKERS=4
WORKER_CONNECTIONS=1000
KEEPALIVE=5

# Monitoring (optional)
ENABLE_METRICS=false
METRICS_PORT=9090